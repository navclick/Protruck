@model ProTrukRepo.ViewModels.DorderVM
@{
    ViewBag.Title = "AddDo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/OpenPad.js")"></script>
<script>
    initUrduEditor();
</script>

