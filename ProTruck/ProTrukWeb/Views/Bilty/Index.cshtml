
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row" id="ContentMain" ng-controller="HomeCtrl">
        <div class="content-wrapper-before gradient-45deg-indigo-purple"></div>
        <div class="breadcrumbs-dark pb-0 pt-4" id="breadcrumbs-wrapper"></div>

        <div class="col s12">
            <div class="container">
                <div class="section section-data-tables">
                    <div class="row">
                        <div class="col s12">
                            <div class="card">
                                <div class="card-content">
                                    <h4 class="card-title left">Builty</h4>
                                    <div class="row">
                                        <div class="col s12">
                                            <div class="input-field col s6">
                                                <input id="date" type="text" class="datepicker">
                                                <label for="date">Select Date</label>
                                            </div>
                                            <div class="input-field col s6">
                                                <input id="do_number" type="number" class="validate">
                                                <label for="do_number">DO Number</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col s12">
                                            <div class="input-field col s4">
                                                <input id="v_id" type="text" class="validate">
                                                <label for="v_id">Vehicle ID</label>
                                            </div>
                                            <div class="input-field col s4">
                                                <select>
                                                    <option value="1">Lucky Cement Ltd</option>
                                                    <option value="2">Dynamic Traders Pvt Ltd</option>
                                                    <option value="3">Siddiq Corporation</option>
                                                </select>
                                                <label>Customer</label>
                                            </div>
                                            <div class="input-field col s4">
                                                <select>
                                                    <option value="1">Paid</option>
                                                    <option value="2">Cash On Delivery</option>
                                                    <option value="3">Credit</option>
                                                </select>
                                                <label>Payment</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col s12">
                                            <div class="input-field col s4">
                                                <select>
                                                    <option value="1">Gul Khan</option>
                                                    <option value="2">Attaullah Najeeb</option>
                                                    <option value="3">Hikmat Jan</option>
                                                </select>
                                                <label>Driver</label>
                                            </div>
                                            <div class="input-field col s4">
                                                <input id="rate_ton" type="text" class="validate">
                                                <label for="rate_ton">Rate / Ton</label>
                                            </div>

                                            <div class="input-field col s2">
                                                <input id="weight" type="text" class="validate">
                                                <label for="weight">Weight</label>
                                            </div>
                                            <div class="input-field col s2">
                                                <select>
                                                    <option value="1">Ton(s)</option>
                                                    <option value="2">Kilogram(s)</option>
                                                </select>
                                            </div>

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col s12">
                                            <div class="input-field col s4">
                                                <input id="total" type="text" class="validate">
                                                <label for="total">Total</label>
                                            </div>

                                            <div class="input-field col s4">
                                                <input id="qty" type="text" class="validate">
                                                <label for="qty">Qty</label>
                                            </div>

                                            <div class="input-field col s4">
                                                <input id="paid" type="text" class="validate">
                                                <label for="paid">Paid</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col s12">
                                            <div class="input-field col s4">
                                                <input id="balance" type="text" class="validate">
                                                <label for="balance">Balance</label>
                                            </div>

                                            <div class="input-field col s4 push-s4">
                                                <a class="btn purple waves-effect waves-light right">Save</a>
                                            </div>
                                        </div>
                                    </div>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col s12">
            <div class="container">
                <div class="section section-data-tables">
                    <div class="row">
                        <div class="col s12">
                            <div class="card">
                                <div class="card-content">

                                    <div class="row">
                                        <div class="col s12">
                                            <div class="input-field col s4">
                                                <input id="sbr_lsb" type="text" class="validate">
                                                <label for="sbr_lsb">SBR / LSB</label>
                                            </div>
                                            <div class="input-field col s4">
                                                <input id="party" type="text" class="validate">
                                                <label for="party">Party</label>
                                            </div>
                                            <div class="input-field col s4">
                                                <input id="cement" type="text" class="validate">
                                                <label for="cement">Cement</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col s12">
                                            <div class="input-field col s12">
                                                <textarea id="address" class="materialize-textarea"></textarea>
                                                <label for="address">Address</label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var elems = document.querySelectorAll('.datepicker');
        var instances = M.Datepicker.init(elems, options);
    });

    // Or with jQuery

    $(document).ready(function () {
        $('.datepicker').datepicker();
    });
</script>



